//A Database (simple)
#include<stdio.h>
#include<string.h>
#define MAX_RECORDS 100
struct record{
    int id;
    char name[50];
    int age;
};
struct record database[MAX_RECORDS];
int record_count = 0;
void addrecord(int id; char name[];int age){
    if(record_count < MAX_RECORDS){
        database[record_count].id = id;
        strcpy(database[record_count].name, name);
        database[record_count].age = age;
        record_count++;
        printf("Record Added Successfully!\n");
    } else {
        printf("Database is Full, Can't add more records.\n");
    }
}
void displayrecords(){
    if (record_count == 0){
        printf("No records to display.\n");
    } else {
        printf("ID\tName\t\tAge\n");
        printf("-------------------------\n");
        for(int i = 0; i < record_count; i++){
            printf("%d\t%s\t\t%d\n", database[i].id, database[i].name, database[i].age);
        }
    }
}
void searchrecord(int id){
    int found = 0;
    for (int i; i < record_count; i++){
        if (database[i].id == id){
            printf("Record Found: ID: %d, Name: %s, Age: %d\n", database[i].id, database[i].name, database[i].age);
            found = 1;
            break;
        }
    }
    if (!found){
        printf("Record with ID %d not found/n", id);
    }
}
void deleterecord(int id){
    int found = 0;
    for(int i = 0; i < record_count; i++){
        if (database[i].id == id){
            for(int j = i; j < record_count - 1; j++){
                database[j] = database[j + 1];
            }
            record_count--;
            found = 1;
            printf("Record with ID %d deleted.\n", id);
            break;
        }
    }
    if(!found){
        printf("Record with ID %d not found.\n", id);
    }
}
int main(){
    int choice, id, age;
    char name[50];
    while (1){
        printf("\nS I M P L E  D A T A B A S E\n");
        printf("1. Add Record\n");
        printf("2. Display Records\n");
        printf("3. Search Record\n");
        printf("4. Delete Record\n");
        printf("5. Exit\n");
        printf("Choose an option: ");
        scanf("%d", &choice);
          switch (choice) {
            case 1:
                printf("Enter ID: ");
                scanf("%d", &id);
                printf("Enter Name: ");
                scanf("%s", name);
                printf("Enter Age: ");
                scanf("%d", &age);
                addRecord(id, name, age);
                break;
            case 2:
                displayRecords();
                break;
            case 3:
                printf("Enter ID to search: ");
                scanf("%d", &id);
                searchRecord(id);
                break;
            case 4:
                printf("Enter ID to delete: ");
                scanf("%d", &id);
                deleteRecord(id);
                break;
            case 5:
                return 0;
            default:
                printf("Invalid choice. Try again.\n");
        }
    }
}
